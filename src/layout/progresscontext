import React, { createContext, useState } from 'react';

const ProgressContext = createContext();

export const ProgressProvider = ({ children }) => {
    const NUM_CIRCLES = 5; // Cambiar según el número de círculos

    const initialProgress = Array(NUM_CIRCLES).fill(0).map((_, i) => (i === 0 ? 25 : 0));
    const [progresses, setProgresses] = useState(initialProgress);

    const updateProgress = (index, value) => {
        const newProgresses = [...progresses];
        newProgresses[index] = value;
        setProgresses(newProgresses);
    };

    return (
        <ProgressContext.Provider value={{ progresses, updateProgress }}>
            {children}
        </ProgressContext.Provider>
    );
};

export default ProgressContext;